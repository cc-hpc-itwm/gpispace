<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <xsd:annotation>
    <xsd:documentation>
    petri nets with
      typed ports
      typed places
      typed tokens
      user defined types
      hierarchical structure
    </xsd:documentation>
  </xsd:annotation>

  <xsd:element name="defun" type="function_type"/>
  <xsd:element name="structs" type="struct_list_type"/>
  
  <xsd:complexType name="struct_list_type">
    <xsd:choice maxOccurs="unbounded">
      <xsd:element minOccurs="0" name="struct" type="struct_type"/>
      <xsd:element minOccurs="0" name="include-structs" type="struct_include_type"/>
    </xsd:choice>
  </xsd:complexType>

  <xsd:complexType name="struct_field_type">
    <xsd:attribute name="name" type="xsd:string" use="required"/>
    <xsd:attribute name="type" type="xsd:string" use="required"/>
  </xsd:complexType>
  
  <xsd:complexType name="struct_type">
    <xsd:choice maxOccurs="unbounded">
      <xsd:element minOccurs="0" name="field" type="struct_field_type"/>
      <xsd:element minOccurs="0" name="struct" type="struct_type"/>
    </xsd:choice>
    <xsd:attribute name="name" type="xsd:ID" use="required"/>
  </xsd:complexType>

  <xsd:complexType name="token_field_type">
    <xsd:choice>
      <xsd:element minOccurs="0" maxOccurs="1" name="value" type="xsd:string"/>
      <xsd:element minOccurs="0" maxOccurs="unbounded" name="field" type="token_field_type"/>
    </xsd:choice>
    <xsd:attribute name="name" type="xsd:string" use="required"/>
  </xsd:complexType>

  <xsd:complexType name="token_type">
    <xsd:choice>
      <xsd:element minOccurs="0" maxOccurs="1" name="value" type="xsd:string"/>
      <xsd:element minOccurs="0" maxOccurs="unbounded" name="field" type="token_field_type"/>
    </xsd:choice>
  </xsd:complexType>

  <xsd:complexType name="place_type">
    <xsd:sequence>
      <xsd:element minOccurs="0" maxOccurs="unbounded" name="token" type="token_type"/>
    </xsd:sequence>
    <xsd:attribute name="name" type="xsd:string" use="required"/>
    <xsd:attribute name="capacity" type="xsd:nonNegativeInteger" use="optional"/>
    <xsd:attribute name="type" type="xsd:string" use="required"/>
  </xsd:complexType>

  <xsd:complexType name="port_type">
    <xsd:attribute name="name" type="xsd:string" use="required"/>
    <xsd:attribute name="type" type="xsd:string" use="required"/>
    <xsd:attribute name="place" type="xsd:string" use="optional"/>
  </xsd:complexType>

  <xsd:complexType name="mod_type">
    <xsd:attribute name="name" type="xsd:string" use="required"/>
    <xsd:attribute name="function" type="xsd:string" use="required"/>
  </xsd:complexType>

  <xsd:complexType name="connect_type">
    <xsd:attribute name="place" type="xsd:string" use="required"/>
    <xsd:attribute name="port" type="xsd:string" use="required"/>
  </xsd:complexType>

  <xsd:complexType name="function_type">
    <xsd:sequence>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element maxOccurs="unbounded" minOccurs="0" name="struct" type="struct_type"/>
        <xsd:element maxOccurs="unbounded" minOccurs="0" name="include-structs" type="struct_include_type"/>
      </xsd:choice>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element maxOccurs="unbounded" minOccurs="0" name="in" type="port_type"/>
        <xsd:element maxOccurs="unbounded" minOccurs="0" name="out" type="port_type"/>
      </xsd:choice>
      <xsd:choice minOccurs="1">
        <xsd:element name="expression" type="xsd:string"/>
        <xsd:element name="module" type="mod_type"/>
        <xsd:element name="net" type="net_type"/>
      </xsd:choice>
      <xsd:element name="condition" type="xsd:string" minOccurs="0" maxOccurs="unbounded" default="true"/>
    </xsd:sequence>
    <xsd:attribute name="name" type="xsd:string" use="optional"/>
    <xsd:attribute name="internal" type="xsd:boolean" use="optional" default="true"/>
  </xsd:complexType>

  <xsd:complexType name="transition_include_type">
    <xsd:attribute name="href" type="xsd:string" use="required"/>
  </xsd:complexType>

  <xsd:complexType name="struct_include_type">
    <xsd:attribute name="href" type="xsd:string" use="required"/>
  </xsd:complexType>

  <xsd:complexType name="global_include_type">
    <xsd:attribute name="href" type="xsd:string" use="required"/>
    <xsd:attribute name="as" type="xsd:string" use="optional"/>
  </xsd:complexType>

  <xsd:complexType name="use_type">
    <xsd:attribute name="name" type="xsd:string" use="required"/>
  </xsd:complexType>

  <xsd:complexType name="transition_type">
    <xsd:sequence>
      <xsd:choice minOccurs="1" maxOccurs="1">
        <xsd:element name="defun" type="function_type"/>
        <xsd:element name="include" type="transition_include_type"/>
        <xsd:element name="use" type="use_type"/>
      </xsd:choice>
      <xsd:choice minOccurs="0" maxOccurs="unbounded">
        <xsd:element name="connect-in" type="connect_type"/>
        <xsd:element name="connect-out" type="connect_type"/>
        <xsd:element name="connect-read" type="connect_type"/>
      </xsd:choice>
      <xsd:element name="condition" type="xsd:string" minOccurs="0" maxOccurs="unbounded" default="true"/>
    </xsd:sequence>
    <xsd:attribute name="name" type="xsd:string" use="required"/>
  </xsd:complexType>

  <xsd:complexType name="net_type">
    <xsd:choice maxOccurs="unbounded">
      <xsd:element name="struct" type="struct_type"/>
      <xsd:element name="include-structs" type="struct_include_type"/>
      <xsd:element name="place" type="place_type"/>
      <xsd:element name="defun" type="function_type"/>
      <xsd:element name="transition" type="transition_type"/>
      <xsd:element name="include" type="global_include_type"/>
    </xsd:choice>
  </xsd:complexType>
</xsd:schema>
