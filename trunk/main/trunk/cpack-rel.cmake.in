set(CPACK_CMAKE_GENERATOR "Unix Makefiles")
set(CPACK_GENERATOR "TBZ2")
#set(CPACK_GENERATOR "STGZ")

if (${CMAKE_BUILD_TYPE} MATCHES "Debug")
     set(CPACK_PACKAGE_NAME "sdpa-dbg")
else (${CMAKE_BUILD_TYPE} MATCHES "Debug")
     set(CPACK_PACKAGE_NAME "sdpa")
endif (${CMAKE_BUILD_TYPE} MATCHES "Debug")

set(CPACK_STRIP_FILES ON)
set(CPACK_PACKAGE_VENDOR "@PROJECT_VENDOR@")
set(CPACK_PACKAGE_DESCRIPTION "@PROJECT_DESCRIPTION@")
set(CPACK_PACKAGE_VERSION "@PROJECT_VERSION@")
set(CPACK_PACKAGE_VERSION_MAJOR "@V_MAJOR@")
set(CPACK_PACKAGE_VERSION_MINOR "@V_MINOR@")
set(CPACK_PACKAGE_VERSION_PATCH "@V_PATCH@")
set(CPACK_PACKAGE_FILE_NAME "${CPACK_PACKAGE_NAME}-${CPACK_PACKAGE_VERSION}")
set(CPACK_PACKAGE_INSTALL_DIRECTORY "SDPA Install")

include(packages.list.cmake)
set(COMPONENTS_TO_INSTALL
  applications
  modules
  configurations
  examples
  parsu
)
set(CPACK_INSTALL_CMAKE_PROJECTS "")
foreach (comp ${COMPONENTS_TO_INSTALL})
  set(CPACK_INSTALL_CMAKE_PROJECTS "${CPACK_INSTALL_CMAKE_PROJECTS};@sdpa_main_BINARY_DIR@;main;${comp};/")
endforeach ()

set(CPACK_COMPONENT_APPLICATIONS_DISPLAY_NAME "Applications")
set(CPACK_COMPONENT_MODULES_DISPLAY_NAME "Example modules")
set(CPACK_COMPONENT_EXAMPLES_DISPLAY_NAME "Example XML descriptions")
set(CPACK_COMPONENT_CONFIGURATION_DISPLAY_NAME "Example configuration files")
set(CPACK_COMPONENT_DOCUMENTATION_DISPLAY_NAME "Documentation")
set(CPACK_COMPONENT_LIBRARIES_DISPLAY_NAME "Libraries")
set(CPACK_COMPONENT_HEADERS_DISPLAY_NAME "C++ Headers")

set(CPACK_COMPONENT_APPLICATIONS_DESCRIPTION
  "${CPACK_PACKAGE_DESCRIPTION}")
set(CPACK_COMPONENT_MODULES_DESCRIPTION
  "Example modules")
set(CPACK_COMPONENT_LIBRARIES_DESCRIPTION
  "Static libraries used to build programs with SDPA")
set(CPACK_COMPONENT_HEADERS_DESCRIPTION
  "C/C++ header files for use with SDPA")
set(CPACK_COMPONENT_HEADERS_DEPENDS libraries)

set(CPACK_COMPONENT_APPLICATIONS_GROUP "Runtime")
set(CPACK_COMPONENT_MODULES_GROUP "Runtime")
set(CPACK_COMPONENT_CONFIGURATION_GROUP "Runtime")

set(CPACK_COMPONENT_EXAMPLES_GROUP "Examples")

set(CPACK_COMPONENT_LIBRARIES_GROUP "Development")
set(CPACK_COMPONENT_HEADERS_GROUP "Development")
set(CPACK_COMPONENT_DOCUMENTATION_GROUP "Development")

set(CPACK_COMPONENT_GROUP_DEVELOPMENT_DESCRIPTION
  "All of the tools you'll ever need to develop software")

set(CPACK_ALL_INSTALL_TYPES Full Developer)

set(CPACK_COMPONENT_APPLICATIONS_INSTALL_TYPES Full)
set(CPACK_COMPONENT_LIBRARIES_INSTALL_TYPES Developer Full)
set(CPACK_COMPONENT_HEADERS_INSTALL_TYPES Developer Full)
