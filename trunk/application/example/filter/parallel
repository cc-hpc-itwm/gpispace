#/bin/bash

inf=${1:?}
int=${2:?}
outf=${3:?}
outt=${4:?}
prog=${5:?}
shift 5

cat tune.conf > filt.conf

module load soft/su
cat >> filt.conf <<EOF
input.file `pwd`/${inf}
input.type ${int}
output.file `pwd`/${outf}
output.type ${outt}
exec.su "${prog} $@"
EOF

pnetc loop.xml -I ../../lib > su4.pnet
sdpac -w submit su4.pnet
