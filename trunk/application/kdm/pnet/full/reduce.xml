<defun>

  <in name="config" type="config" place="config"/>
  <in name="volume" type="volume_in_progress" place="volume"/>
  <out name="volume_done" type="volume_with_store" place="volume_done"/>
  <in name="sum" type="volume_in_reduction" place="sum_in"/>
  <out name="sum" type="volume_in_reduction" place="sum_out"/>

  <net>

    <place name="config" type="config"/>
    <place name="volume" type="volume_in_progress"/>
    <place name="volume_done" type="volume_with_store"/>
    <place name="sum_in" type="volume_in_reduction"/>
    <place name="sum_out" type="volume_in_reduction"/>

    <transition name="init">
      <defun>
        <in name="volume" type="volume_in_progress"/>
        <in name="sum" type="volume_in_reduction"/>
        <out name="volume_with_store" type="volume_with_store"/>
        <out name="sum_with_store" type="volume_with_store"/>
        <out name="left" type="long"/>
        <expression>
          ${volume_with_store} := ${volume.volume};
          ${sum_with_store} := ${sum.volume};
          ${left} := ${sum.left};
        </expression>
      </defun>
      <connect-in port="volume" place="volume"/>
      <connect-in port="sum" place="sum_in"/>
      <connect-out port="volume_with_store" place="volume_with_store"/>
      <connect-out port="sum_with_store" place="sum_with_store"/>
      <connect-out port="left" place="left"/>
    </transition>

    <place name="volume_with_store" type="volume_with_store"/>
    <place name="sum_with_store" type="volume_with_store"/>
    <place name="left" type="long"/>

    <transition name="reduce">
      <defun>
        <in name="config" type="config"/>
        <in name="volume" type="volume_with_store"/>
        <in name="sum" type="volume_with_store"/>
        <out name="sum" type="volume_with_store"/>
        <module name="kdmfull" function="reduce (config, volume, sum)"/>
      </defun>
      <connect-in port="config" place="config"/>
      <connect-read port="volume" place="volume_with_store"/>
      <connect-in port="sum" place="sum_with_store"/>
      <connect-out port="sum" place="new_sum"/>
    </transition>

    <place name="new_sum" type="volume_with_store"/>

    <transition name="finalize">
      <defun>
        <in name="new_sum" type="volume_with_store"/>
        <in name="volume" type="volume_with_store"/>
        <in name="left" type="long"/>
        <out name="volume" type="volume_with_store"/>
        <out name="sum" type="volume_in_reduction"/>
        <expression>
          ${sum.left} := ${left} - 1L;
          ${sum.volume} := ${new_sum};
        </expression>
      </defun>
      <connect-in port="new_sum" place="new_sum"/>
      <connect-in port="volume" place="volume_with_store"/>
      <connect-in port="left" place="left"/>
      <connect-out port="volume" place="volume_done"/>
      <connect-out port="sum" place="sum_out"/>
    </transition>
  </net>
</defun>
