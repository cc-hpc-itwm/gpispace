<defun name="loadTT">

  <in name="config" type="config" place="config_in"/>
  <out name="config" type="config" place="config_out"/>

  <net>

    <place name="config_in" type="config"/>
    <place name="config_out" type="config"/>
    <place name="config_initialize" type="config"/>
    <place name="config_loadTT" type="config"/>
    <place name="done" type="control"/>
    <place name="doneTT" type="control"/>

    <place name="parallel" type="long"/>
    <place name="id" type="long"/>
    <place name="wait" type="long"/>

    <include-template href="dup.xml"/>
    <specialize name="dup_config" use="dup">
      <type-map replace="T" with="config"/>
    </specialize>

    <transition name="dup" inline="true">
      <use name="dup_config"/>
      <connect-in port="in" place="config_in"/>
      <connect-out port="one" place="config_initialize"/>
      <connect-out port="two" place="config_loadTT"/>
    </transition>

    <transition name="initialize">
      <defun>
        <in name="config" type="config"/>
        <out name="parallel" type="long"/>
        <out name="wait" type="long"/>
        <expression>
          ${parallel} := ${config.loadTT.parallel};
          ${wait} := ${parallel}
        </expression>
      </defun>
      <connect-in port="config" place="config_initialize"/>
      <connect-out port="parallel" place="parallel"/>
      <connect-out port="wait" place="wait"/>
    </transition>

    <transition name="generate" inline="true">
      <include-function href="sequence.xml"/>
      <connect-in port="amount" place="parallel"/>
      <connect-out port="out" place="id"/>
    </transition>

    <transition name="loadTT">
      <defun>
        <in name="config" type="config"/>
        <in name="id" type="long"/>
        <out name="done" type="control"/>
        <module name="kdmfull" function="loadTT"/>
      </defun>
      <connect-read port="config" place="config_loadTT"/>
      <connect-in port="id" place="id"/>
      <connect-out port="done" place="doneTT"/>
    </transition>

    <include-template href="wait.xml"/>
    <specialize name="wait_control" use="wait">
      <type-map replace="T" with="control"/>
    </specialize>

    <transition name="wait">
      <use name="wait_control"/>
      <place-map virtual="wait" real="wait"/>
      <connect-in port="trigger" place="doneTT"/>
      <connect-out port="done" place="done"/>
    </transition>

    <include-template href="trigger_if.xml"/>
    <specialize name="trigger_if_config" use="trigger_if">
      <type-map replace="T" with="config"/>
    </specialize>

    <transition name="finalize">
      <use name="trigger_if_config"/>
      <connect-in port="trigger" place="done"/>
      <connect-in port="object" place="config_loadTT"/>
      <connect-out port="object" place="config_out"/>
    </transition>
  </net>
</defun>
