<structs>

  <struct name="config">
    <struct name="size">
      <struct name="mem">
        <field name="gpi" type="long"/>
        <field name="shmem" type="long"/>
      </struct>
    </struct>

    <struct name="handle">
      <struct name="data">
        <field name="fine_any" type="long"/>
        <field name="coarse_mask" type="long"/>
        <field name="coarse_vel" type="long"/>
        <field name="output" type="long"/>
        <field name="update" type="long"/>
      </struct>
    </struct>
  </struct>

  <include-structs href="interval/types.xml"/>

  <struct name="point">
    <field name="x" type="double"/>
    <field name="y" type="double"/>
    <field name="z" type="double"/>
  </struct>

  <struct name="contribution">
    <field name="point" type="point"/>
    <field name="value" type="double"/>
  </struct>

</structs>
