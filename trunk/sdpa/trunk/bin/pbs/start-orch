#!/bin/sh
test -r ~/.init-screen.env && source ~/.init-screen.env

debug=false
#url="0.0.0.0:5000"
bind_addr="`hostname`"
name="orchestrator"

while getopts ":hgo:l:" opt; do
  case $opt in
	g)
	  debug=true
	;;
	l)
	  bind_addr=$OPTARG
	;;
        n)
          name=$OPTARG
        ;;
	h)
	  echo "usage: $0 [-h] [-g] [-l interface] [-n name]" >&2
	  echo "    -h : print this help" >&2
	  echo "    -l : address to listen on (default: $bind_addr)" >&2
	  echo "    -n : name (default: $name)" >&2
	  echo "    -g : run within gdb" >&2
	  exit 0
	;;
	\?)
	  echo "Invalid option: -$OPTARG" >&2
	  exit 1
  esac
done

echo "Running $name at $bind_addr"

if $debug ; then
  echo "running within gdb..."
  gdb -ex run --args orchestrator -u "$bind_addr" -n "${name}"
else
  orchestrator -u "$bind_addr" -n "${name}" >/scratch/$USER/sdpa/orch.log 2>&1
fi
