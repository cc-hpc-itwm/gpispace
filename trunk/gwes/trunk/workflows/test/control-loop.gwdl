<?xml version="1.0" encoding="UTF-8"?>
<workflow xmlns="http://www.gridworkflow.org/gworkflowdl" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.gridworkflow.org/gworkflowdl http://www.gridworkflow.org/kwfgrid/src/xsd/gworkflowdl_2_0.xsd http://www.gridworkflow.org/gworkflowdl/operationclass http://www.gridworkflow.org/kwfgrid/src/xsd/gworkflowdl_operationclass_2_0.xsd" ID="No_ID">
  <!-- $Id: gworkflowdl_control-loop-with-read-edge.xml 1316 2009-05-28 09:53:39Z andreas.hoheisel@first.fraunhofer.de $ -->
  <description>loop that counts from 0 to 100</description>
  <property name="occurrence.sequence" />
  <place ID="counter">
    <token>
      <data>
        <counter xsi:type="xsd:int">0</counter>
      </data>
    </token>
  </place>
  <place ID="increment">
    <token>
      <data>
        <one xsi:type="xsd:int">1</one>
      </data>
    </token>
  </place>
  <place ID="end" />
  <transition ID="i_plus_plus">
    <description>i++</description>
    <readPlace placeID="increment" edgeExpression="incr" />
    <inputPlace placeID="counter" edgeExpression="a" />
    <outputPlace placeID="counter" edgeExpression="a+incr" />
    <condition>$a &lt; 100</condition>
  </transition>
  <transition ID="break">
    <description>end loop if a is greater or equal 100</description>
    <inputPlace placeID="counter" edgeExpression="a" />
    <outputPlace placeID="end" edgeExpression="a" />
    <condition>$a &gt;= 100</condition>
  </transition>
</workflow>

