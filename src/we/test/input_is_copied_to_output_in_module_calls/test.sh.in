# mirko.rahn@itwm.fraunhofer.de

source "@CMAKE_BINARY_DIR@/test/env.sh"
source "@CMAKE_BINARY_DIR@/test/dir_build.sh"
source "@CMAKE_BINARY_DIR@/test/measured.sh"

DIR_SOURCE="@CMAKE_CURRENT_SOURCE_DIR@"

MAIN="input_is_copied_to_output_in_module_calls"
OUT="${DIR_BUILD}/${MAIN}.out"
RES=$(mktemp -p "${DIR_BUILD}")

make+=( make -f "${SDPA_HOME}/share/sdpa/make/common.mk" )
make+=( MAIN="${MAIN}" )
make+=( BUILDDIR="${DIR_BUILD}" )
make+=( WE_EXEC_OUTPUT="${RES}" )
make+=( PUT_PORT="p=[]" )
make+=( -C "${DIR_SOURCE}" )

cleanup()
{
  rm -f "${RES}"
  eval ${make[@]} clean
  cleanup_dir_build
}

trap 'cleanup' EXIT

measured "run" ${make[@]} run                               || die $EX_ERR_RUN

test -n "$(pnetget -i "${RES}" -p p)"                       || die $EX_ERR_RES

rm -f "${RES}"                                           || die $EX_ERR_CLEANUP
measured "clean" ${make[@]} clean                        || die $EX_ERR_CLEANUP
cleanup_dir_build                                        || die $EX_ERR_CLEANUP

trap - EXIT
