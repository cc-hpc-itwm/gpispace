# mirko.rahn@itwm.fraunhofer.de

source "@CMAKE_BINARY_DIR@/test/env.sh"
source "@CMAKE_BINARY_DIR@/test/dir_build.sh"

DIR_SOURCE="@CMAKE_CURRENT_SOURCE_DIR@"

MAIN="transition_with_unconnected_input_port"
OUT="${DIR_BUILD}/${MAIN}.out"
RES=$(mktemp --tmpdir="${DIR_BUILD}")

make_src='make -f "${SDPA_HOME}/share/sdpa/make/common.mk" BUILDDIR="${DIR_BUILD}" WE_EXEC_OUTPUT="${RES}" MAIN="${MAIN}" -C "${DIR_SOURCE}"'

cleanup()
{
  rm -rf "${RES}"
  eval ${make_src} clean
  cleanup_dir_build
}

trap 'cleanup' EXIT

eval ${make_src} run                                        || die $EX_ERR_RUN

grep -q 'finished \[1\]' "${OUT}"                           || die $EX_ERR_RES
test -z $(pnetget -i "${RES}" -p o)                         || die $EX_ERR_RES
