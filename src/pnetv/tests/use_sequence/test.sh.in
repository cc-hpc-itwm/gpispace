# mirko.rahn@itwm.fraunhofer.de

source "@CMAKE_BINARY_DIR@/test/env.sh"
source "@CMAKE_BINARY_DIR@/test/dir_build.sh"
source "@CMAKE_BINARY_DIR@/test/measured.sh"

DIR_SOURCE="@CMAKE_CURRENT_SOURCE_DIR@"
VERIFICATION_RESULT="${DIR_BUILD}/use_sequence.pnet.verification"
EXPECTED_RESULT="${DIR_SOURCE}/expected_result"

make=( make )
make+=( -f "${SDPA_HOME}/share/sdpa/make/common.mk" )
make+=( MAIN=use_sequence )
make+=( XML=use_sequence.xml )
make+=( BUILDDIR="${DIR_BUILD}" )
make+=( -C "${DIR_SOURCE}" )

cleanup()
{
  eval ${make[@]} clean
  cleanup_dir_build
}

trap 'cleanup' EXIT

measured "verify" ${make[@]} verify                         || die $EX_ERR_RUN

sed -e 's/[^:]*://' -i "${VERIFICATION_RESULT}"             || die $EX_ERR_ENV

diff -q "${VERIFICATION_RESULT}" "${EXPECTED_RESULT}"       || die $EX_ERR_RES

measured "clean" ${make[@]} clean                        || die $EX_ERR_CLEANUP
cleanup_dir_build                                        || die $EX_ERR_CLEANUP

trap - EXIT
