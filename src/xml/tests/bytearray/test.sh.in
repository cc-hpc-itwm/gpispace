# mirko.rahn@itwm.fraunhofer.de

source "@CMAKE_BINARY_DIR@/test/env.sh"
source "@CMAKE_BINARY_DIR@/test/dir_build.sh"
source "@CMAKE_BINARY_DIR@/test/measured.sh"

DIR_SOURCE="@CMAKE_CURRENT_SOURCE_DIR@"

OUT="${DIR_BUILD}/bytearray.out"

make+=( make -f "${SDPA_HOME}/share/sdpa/make/common.mk" )
make+=( MAIN=bytearray )
make+=( BUILDDIR="${DIR_BUILD}" )
make+=( PUT_PORT="point=Struct[x:=1.0,y:=2.0]" )
make+=( -C "${DIR_SOURCE}" )

cleanup()
{
  eval ${make[@]} clean
  cleanup_dir_build
}

trap 'cleanup' EXIT

measured "build-wrapper" ${make[@]} lib                      || die $EX_ERR_RUN
measured "run" WE_EXEC_OUTPUT="${OUT}" ${make[@]} run        || die $EX_ERR_RUN

test -s "${OUT}"                                             || die $EX_ERR_RUN

res=$(pnetget -i "${OUT}" -p point)                          || die $EX_ERR_ENV
test "$res" == "Struct [x := 1.00000, y := 2.00000]"         || die $EX_ERR_RES

measured "clean" ${make[@]} clean                        || die $EX_ERR_CLEANUP
cleanup_dir_build                                        || die $EX_ERR_CLEANUP

trap - EXIT
