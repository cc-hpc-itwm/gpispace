<defun name="prepare">

  <in  name="start" type="control" place="start"/>
  <out name="done" type="control" place="done"/>

  <net>
    <place name="start" type="control"/>
    <place name="done" type="control"/>

    <transition name="prepare" inline="true">
      <defun>
        <in name="trigger" type="control"/>
        <out name="done" type="control"/>
        <module name="ufbmig_prepare" function="prepare ()">
          <cinclude href="fhglog/fhglog.hpp"/>
          <code><![CDATA[
          MLOG (INFO, "preparing....");
          ]]></code>
        </module>
      </defun>
      <connect-in  port="trigger" place="start"/>
      <connect-out port="done"    place="done"/>
    </transition>
  </net>
</defun>
