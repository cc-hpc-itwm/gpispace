<defun>

  <in name="config" type="config" place="config"/>
  <out name="offsetA" type="offset" place="offsetA"/>
  <out name="offsetB" type="offset" place="offsetB"/>
  <tunnel name="trigger" type="control" place="trigger"/>

  <net>

    <place name="config" type="config"/>
    <place name="offsetA" type="offset"/>
    <place name="offsetB" type="offset"/>

    <struct name="counter">
      <field name="max" type="long"/>
      <field name="id" type="long"/>
    </struct>

    <struct name="state">
      <field name="counter" type="counter"/>
    </struct>

    <transition name="init">
      <defun>
        <in name="config" type="config"/>
        <out name="state" type="state"/>
        <out name="trigger" type="control"/>
        <expression>
          ${state.counter.max} := ${config.num.offset};
          ${state.counter.id} := 0L;
          ${trigger} := [];
        </expression>
      </defun>
      <connect-in port="config" place="config"/>
      <connect-out port="state" place="state"/>
      <connect-out port="trigger" place="trigger"/>
    </transition>

    <place name="state" type="state"/>

    <transition name="done">
      <defun>
        <in name="state" type="state"/>
        <out name="done" type="control"/>
        <expression>
          ${done} := []
        </expression>
      </defun>
      <condition>
        ${state.counter.id} :ge: ${state.counter.max}
      </condition>
      <connect-in port="state" place="state"/>
      <connect-out port="done" place="done"/>
    </transition>

    <place name="trigger" type="control" virtual="true"/>

    <transition name="eat">
      <defun>
        <in name="online" type="control"/>
        <in name="x" type="control"/>
        <expression/>
      </defun>
      <connect-read port="online" place="done"/>
      <connect-in port="x" place="trigger"/>
    </transition>

    <place name="done" type="control"/>

    <transition name="not_done">
      <defun>
        <in name="state" type="state"/>
        <out name="state" type="state"/>
        <expression/>
      </defun>
      <condition>
        ${state.counter.id} :lt: ${state.counter.max}
      </condition>
      <connect-in port="state" place="state"/>
      <connect-out port="state" place="state_not_done"/>
    </transition>

    <place name="state_not_done" type="state"/>

    <transition name="step">
      <defun>
        <in name="trigger" type="control"/>
        <in name="state" type="state"/>
        <out name="state" type="state"/>
        <out name="offsetA" type="offset"/>
        <out name="offsetB" type="offset"/>
        <expression>
          ${offsetA.id} := ${state.counter.id};
          ${offsetB} := ${offsetA};
          ${state.counter.id} := ${state.counter.id} + 1L;
        </expression>
      </defun>
      <connect-in port="trigger" place="trigger"/>
      <connect-in port="state" place="state_not_done"/>
      <connect-out port="state" place="state"/>
      <connect-out port="offsetA" place="offsetA"/>
      <connect-out port="offsetB" place="offsetB"/>
    </transition>

  </net>
</defun>
