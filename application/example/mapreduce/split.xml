<defun name="split">
  <struct name="I_t"/>
  <struct name="i_t"/>
  <struct name="N_t"/>

  <in name="I" type="I_t" place="I"/>
  <out name="i" type="i_t" place="i"/>
  <out name="N" type="N_t" place="N"/>
  <net>
    <struct name="state_t"/>

    <place name="I" type="I_t"/>
    <place name="N" type="N_t"/>
    <place name="i" type="i_t"/>
    <place name="state" type="state_t"/>

    <transition name="init">
      <defun>
        <in name="I" type="I_t"/>
        <out name="state" type="state_t"/>
        <expression></expression>
      </defun>
      <connect-in port="I" place="I"/>
      <connect-out port="state" place="state"/>
    </transition>

    <transition name="split">
      <defun>
        <in name="state" type="state_t"/>
        <out name="state" type="state_t"/>
        <out name="i" type="i_t"/>
        <expression></expression>
        <condition>${state}</condition>
      </defun>
      <connect-in port="state" place="state"/>
      <connect-out port="state" place="state"/>
      <connect-out port="i" place="i"/>
    </transition>

    <transition name="break">
      <defun>
        <in name="state" type="state_t"/>
        <out name="N" type="N_t"/>
        <expression></expression>
        <condition>!${state}</condition>
      </defun>
      <connect-in port="state" place="state"/>
      <connect-out port="N" place="N"/>
    </transition>
  </net>
</defun>
