source "@CMAKE_BINARY_DIR@/application/common.test.sh"

DIR_TEST="@CMAKE_CURRENT_SOURCE_DIR@"

DIR_SOURCE="${DIR_TEST}/.."
DIR_MODULE="${DIR_SOURCE}/src"

OUT="${DIR_BUILD}/sum_many.out"
CMP="${DIR_BUILD}/run.out"
CMP_ORIG="${DIR_TEST}/out.cmp"

make_src='make MAIN=sum_many BUILDDIR="${DIR_BUILD}" PNETC_LINK_PREFIX="libdir=${DIR_BUILD}" -C "${DIR_SOURCE}"'
make_mod='make DIR_BUILD="${DIR_BUILD}" -C "${DIR_MODULE}"'

cleanup()
{
  rm -rf "${CMP}"
  eval ${make_src} clean
  eval ${make_mod} clean
  cleanup_common
}

trap 'cleanup' EXIT

measured "build-module" ${make_mod}                         || die $EX_ERR_RUN
measured "build-wrapper" ${make_src} lib                    || die $EX_ERR_RUN
measured "run" WE_EXEC_WORKER=1 ${make_src} run             || die $EX_ERR_RUN

grep -q 'finished \[1\]' "${OUT}"                           || die $EX_ERR_RES
cat "${OUT}" | grep '^s =>' | sort -nk +3 > "${CMP}"        || die $EX_ERR_OTHER
diff "${CMP}" "${CMP_ORIG}"                                 || die $EX_ERR_RES
