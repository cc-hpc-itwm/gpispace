source "@CMAKE_BINARY_DIR@/application/common.test.sh"

DIR_TEST="@CMAKE_CURRENT_SOURCE_DIR@"

DIR_SOURCE="${DIR_TEST}/.."
DIR_MODULE="${DIR_SOURCE}/src"

OUT="${DIR_BUILD}/avg_stddev.out"
CMP="${DIR_BUILD}/run.out"
CMP_ORIG="${DIR_TEST}/out.cmp"
DAT="${DIR_BUILD}/dat"

make_expr='make BUILDDIR="${DIR_BUILD}" DATFILE="${DAT}" -C "${DIR_SOURCE}"'

cleanup()
{
  rm -rf "${CMP}" "${DAT}"
  eval ${make_expr} clean
  make -C "${DIR_MODULE}" clean
  cleanup_common
}

trap 'cleanup' EXIT

measured "build-module" make -C "${DIR_MODULE}"             || die $EX_ERR_RUN
measured "setup-data"                                                        \
         "${DIR_MODULE}/gen.bin"                                             \
         -b 8388608                                                          \
         -n $((100*1048576))                                                 \
         -s 31415926                                                         \
         -m 0                                                                \
         -g 1                                                                \
         -o "${DAT}"                                        || die $EX_ERR_RUN
measured "build-wrapper" ${make_expr} lib                   || die $EX_ERR_RUN
measured "run" WE_EXEC_WORKER=10 ${make_expr} run           || die $EX_ERR_RUN

grep 'finished \[1\]' "${OUT}"                              || die $EX_ERR_RES
cat "${OUT}" | grep '=>' > "${CMP}"                         || die $EX_ERR_OTHER
diff "${CMP}" "${CMP_ORIG}"                                 || die $EX_ERR_RES
