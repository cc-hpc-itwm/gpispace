<defun name="z_eq_x_plus_y">
  <in name="x" type="double" place="a"/>
  <in name="y" type="double" place="b"/>
  <out name="z" type="double" place="s"/>
  <net>
    <place name="a" type="double"/>
    <place name="b" type="double"/>
    <place name="s" type="long"/>

    <include-template href="sumT.xml"/>
    <specialize name="sum_long" use="sum">
      <type-map replace="T" with="long"/>
    </specialize>
    <specialize name="sum_double" use="sum">
      <type-map replace="T" with="double"/>
    </specialize>

    <transition name="sum">
      <use name="sum_double"/>
      <connect-in port="a" place="a"/>
      <connect-in port="b" place="b"/>
      <connect-out port="s" place="s"/>
    </transition>
  </net>
</defun>
