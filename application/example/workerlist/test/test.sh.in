# {petry,mirko.rahn}@itwm.fraunhofer.de

source "@CMAKE_BINARY_DIR@/test/env.sh"
source "@CMAKE_BINARY_DIR@/test/dir_build.sh"
source "@CMAKE_BINARY_DIR@/test/measured.sh"

DIR_TEST="@CMAKE_CURRENT_SOURCE_DIR@"

DIR_SOURCE="${DIR_TEST}/.."

OUT="${DIR_BUILD}/workerlist.out"

make_src='make BUILDDIR="${DIR_BUILD}" -C "${DIR_SOURCE}"'

cleanup()
{
  eval ${make_src} clean
  cleanup_dir_build
}

run_with_eval_plugin()
{
    fhgkernel -s plugin.wfe.library_path="$SDPA_HOME/libexec/sdpa/apps/workerlist" \
              -L "${SDPA_HOME}/libexec/fhg/plugins" \
        wfe wfe_eval < "${DIR_BUILD}/workerlist.pnet.put" > "${OUT}"
}

trap 'cleanup' EXIT

measured "build-wrapper" ${make_src} lib put                || die $EX_ERR_RUN
measured "install" ${make_src} install                      || die $EX_ERR_RUN
measured "run" run_with_eval_plugin                         || die $EX_ERR_RUN

workers=$(pnetget -p workers < "${OUT}")

test "${workers}" = "List (\"worker-localhost-1\")"         || die $EX_ERR_RES
