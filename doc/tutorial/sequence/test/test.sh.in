# mirko.rahn@itwm.fraunhofer.de

source "@CMAKE_BINARY_DIR@/test/env.sh"
source "@CMAKE_BINARY_DIR@/test/dir_build.sh"
source "@CMAKE_BINARY_DIR@/test/measured.sh"

DIR_TEST="@CMAKE_CURRENT_SOURCE_DIR@"

DIR_SOURCE="${DIR_TEST}/.."
CMP_ORIG="${DIR_TEST}/out.cmp"
RESULT="$(mktemp -p "${DIR_BUILD}")"
CMP="$(mktemp -p "${DIR_BUILD}")"

make_expr='make BUILDDIR="${DIR_BUILD}" -C "${DIR_SOURCE}"'

cleanup()
{
  rm -f "${CMP}"
  rm -f "${RESULT}"
  eval ${make_expr} clean
  cleanup_dir_build
}

trap 'cleanup' EXIT

measured "build-wrapper" ${make_expr} lib                   || die $EX_ERR_RUN
measured "run" WE_EXEC_OUTPUT="${RESULT}" WE_EXEC_WORKER=1 ${make_expr} run \
                                                            || die $EX_ERR_RUN

pnetget -i "${RESULT}" -p i > "${CMP}"                      || die $EX_ERR_RES
diff "${CMP}" "${CMP_ORIG}"                                 || die $EX_ERR_RES

rm -f "${CMP}"                                           || die $EX_ERR_CLEANUP
rm -f "${RESULT}"                                        || die $EX_ERR_CLEANUP
measured "clean" ${make_expr} clean                      || die $EX_ERR_CLEANUP
cleanup_dir_build                                        || die $EX_ERR_CLEANUP

trap - EXIT
