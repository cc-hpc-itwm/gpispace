# mirko.rahn@itwm.fraunhofer.de

source "@CMAKE_BINARY_DIR@/test/env.sh"
source "@CMAKE_BINARY_DIR@/test/dir_build.sh"
source "@CMAKE_BINARY_DIR@/test/dir_state.sh"
source "@CMAKE_BINARY_DIR@/test/measured.sh"

DIR_TEST="@CMAKE_CURRENT_SOURCE_DIR@"

DIR_SOURCE="${DIR_TEST}/.."
DIR_MODULE="${DIR_SOURCE}/src"

OUT="${DIR_BUILD}/avg_stddev.out"
DAT="${DIR_BUILD}/dat"
HOSTFILE="${DIR_BUILD}/hostfile"

make_src='make BUILDDIR="${DIR_BUILD}" DATFILE="${DAT}" LIB_DESTDIR="${DIR_BUILD}" -C "${DIR_SOURCE}"'
make_gen='make DIR_BUILD="${DIR_BUILD}" -C "${DIR_MODULE}"'

cleanup()
{
  sdpa -s "${DIR_STATE}" stop
  rm -f "${DAT}"
  rm -f "${HOSTFILE}"
  eval ${make_src} uninstall
  eval ${make_src} clean
  eval ${make_gen} clean
  cleanup_dir_build
  cleanup_dir_state                                        || die $EX_ERR_CLEANUP
}

trap 'cleanup' EXIT

measured "build-module" ${make_gen}                         || die $EX_ERR_RUN
measured "setup-data"                                                        \
         "${DIR_BUILD}/gen.bin"                                              \
         -b 8388608                                                          \
         -n $((100*1048576))                                                 \
         -s 31415926                                                         \
         -m 0                                                                \
         -g 1                                                                \
         -o "${DAT}"                                        || die $EX_ERR_RUN
measured "build-wrapper" ${make_src} lib                    || die $EX_ERR_RUN
measured "install" ${make_src} install                      || die $EX_ERR_RUN

hostname > "${HOSTFILE}"                                    || die $EX_ERR_ENV

measured "boot" sdpa boot -S "${DIR_STATE}" -A "${DIR_BUILD}" -M -f "${HOSTFILE}" work:4        \
                                                            || die $EX_ERR_BOOT

measured "submit" ${make_src} submit                        || die $EX_ERR_RUN

test "$(pnetget -i "${OUT}" -p avg)" = "0.000193708"        || die $EX_ERR_RES
test "$(pnetget -i "${OUT}" -p stddev)" = "0.999908"        || die $EX_ERR_RES

measured "stop" sdpa -s "${DIR_STATE}" stop                 || die $EX_ERR_STOP

rm -f "${DAT}"                                           || die $EX_ERR_CLEANUP
rm -f "${HOSTFILE}"                                      || die $EX_ERR_CLEANUP
measured "uninstall" ${make_src} uninstall               || die $EX_ERR_CLEANUP
measured "clean" ${make_src} clean                       || die $EX_ERR_CLEANUP
measured "clean-data" ${make_gen} clean                  || die $EX_ERR_CLEANUP
cleanup_dir_build                                        || die $EX_ERR_CLEANUP
cleanup_dir_state                                        || die $EX_ERR_CLEANUP

trap - EXIT
