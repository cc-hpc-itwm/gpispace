#! /bin/sh
#
# Bootstrap the project from a clean checkout.
#
case "$1" in
  -h|-?|--help)
    echo "usage: $0 -DCMAKE_BUILD_TYPE={Debug,Release,Profile} -DWITH_LOG4CPP=YES|NO -DWITH_FHGLOG=YES|NO -DENABLE_SEDA_COMM_LIB=YES|NO"
    exit 0
  ;;
  *)
    if test ! -d "build"; then
        mkdir build
    fi
    cd build && cmake .. ${CMAKE_CFG_DEFAULT_OPTS} $@
  ;;
esac
