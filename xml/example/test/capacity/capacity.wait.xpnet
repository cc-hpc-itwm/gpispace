    <defun name="wait">
      <in name="d" type="string"/>
      <in name="s" type="long"/>
      <inout name="k" type="long"/>
      <module name="capacity" function="wait (d, s, k)">
        <cinclude href="fhglog/fhglog.hpp"/>
        <code><![CDATA[
          LOG (INFO, d << "-" << k << ": sleeping for " << s << " seconds");

          sleep (s);
        ]]></code>
      </module>
    </defun>
