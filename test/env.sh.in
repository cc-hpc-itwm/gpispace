source "@CMAKE_CURRENT_BINARY_DIR@/die.sh"

export SDPA_HOME="@CMAKE_INSTALL_PREFIX@"

SDPA_ENV="${SDPA_HOME}/etc/sdpa/sdpa.env"

test -r "${SDPA_ENV}"                                       || die $EX_ERR_ENV

source "${SDPA_ENV}"

export BOOST_ROOT="@BOOST_ROOT@"
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:"@BOOST_ROOT@/lib":"@HWLOC_LD_PATH@"

test -n "${BOOST_ROOT}"                                     || die $EX_ERR_ENV
test -r "@HWLOC_LIBRARY@"                                   || die $EX_ERR_ENV
