#include <fhg/revision.hpp>

#include <sstream>

namespace fhg
{
  const char* project_summary()
  {
    return "GPI-Space - productive parallel programming and efficient execution";
  }

  const char* project_version()
  {
    return "@PROJECT_VERSION@";
  }

  const char* project_revision()
  {
    return "@PROJECT_REVISION@";
  }

  std::string project_info (const std::string& head)
  {
    std::ostringstream s;

    s << project_summary() << std::endl
      << std::endl << "  * " << head << std::endl
      << std::endl << "version:  " << project_version()
      << std::endl << "revision: " << project_revision()
      << std::endl << "built:    @FHG_BUILD_TIMESTAMP@"
      << std::endl << "contact:  @PROJECT_CONTACT@"
      << std::endl
      << std::endl << "Copyright 2009-2014 Fraunhofer ITWM"
      << std::endl
      ;

    return s.str();
  }
}
