<workflow xmlns="http://www.gridworkflow.org/gworkflowdl" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:schemaLocation="http://www.gridworkflow.org/gworkflowdl http://www.gridworkflow.org/kwfgrid/src/xsd/gworkflowdl_2_0.xsd" ID="No_ID">
    <description>sleep 3 times 2 seconds</description>

    <place ID="duration">
        <token><data><duration>2</duration></data></token>
        <token><data><duration>2</duration></data></token>
        <token><data><duration>2</duration></data></token>
    </place>
    <place ID="stderr"/>
    <place ID="exitcode"/>

    <transition ID="sleep">
        <description>sleep</description>
        <inputPlace placeID="duration" edgeExpression="duration"/>
        <outputPlace placeID="stderr" edgeExpression="stderr"/>
        <outputPlace placeID="exitcode" edgeExpression="exitcode"/>
 		<operation>
      		<oc:operationClass xmlns:oc="http://www.gridworkflow.org/gworkflowdl/operationclass" name="sleep">
                <oc:operationCandidate type="cli" operationName="cat.sh" resourceName="${GWES_CPP_HOME}/applications/test/sleep.sh" selected="true"/>
     	 	</oc:operationClass>
    	</operation>
    </transition>

</workflow>
