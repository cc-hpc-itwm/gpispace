#!/bin/bash

GSPC_API_COMMAND_SHORT_DESCRIPTION="manage the remote interface"
GSPC_API_COMMAND_LEVEL=1

. $(gspc --exec-path)/gspc-sh-setup

GSPC_COOKIE_FILE="${HOME}/.gspc.cookie"
RIF_DEFAULT_PORT=5000
rif_port="$(gspc config --get rif.port)"
if [ -z "$rif_port" ] ; then
    rif_port="${RIF_DEFAULT_PORT}"
fi

function usage()
{
    cat <<EOF
usage: rif [-h|--help] [options] [--] [<action>]

Options:

   --rif-port <port>     specify the port of the RIF (${rif_port})
   --default-port        print the default port
   --get-cookie         shows the current cookie
   --set-cookie <cookie> sets the cookie

   -F|--file file        use nodes from file
   -N|--node node        use this node
Actions:

$(gspc --no-alias list-commands --prefix=rif --indent=4 --level=$((GSPC_API_COMMAND_LEVEL+1)))
EOF
}

function set_cookie()
{
    local cookie="$1" ; shift
    if [ -z "$cookie" ] ; then
        for ((i=0 ; i < 16 ; ++i))
        do
            cookie+=$(printf "%02x" $((${RANDOM} % 256)))
        done
    fi
    echo "${cookie}" > "${GSPC_COOKIE_FILE}"
    chmod 0600 "${GSPC_COOKIE_FILE}"
}

if [ ! -e "${GSPC_COOKIE_FILE}" ]
then
    set_cookie || {
        gspc_log_error rif "could not set cookie"
        exit 1
    }
fi

opts=()
while true ; do
    case "$1" in
        -h|--help) usage ; exit 0 ;;
        --rif-port)
            rif_port="$2"
            shift ; shift
            ;;
        --default-port)
            echo "${RIF_DEFAULT_PORT}"
            exit 0
            ;;
        --get-cookie)
            cat "${GSPC_COOKIE_FILE}"
            exit $?
            ;;
        --set-cookie)
            set_cookie "$2"
            exit $?
            ;;
        -F|--file)
            opts+=("$1" "$2")
            shift; shift
            ;;
        -N|--node)
            opts+=("$1" "$2")
            shift; shift
            ;;
        --) shift; break ;;
        *) break ;;
    esac
done

action="$1"

if [ -z "$action" ] ; then
    usage
    exit 1
else
    shift
fi

opts+=(--rif-port "$rif_port")

cmd=$(gspc_resolve_command "rif-${action}")

if [ ! -x "${cmd}" ] ; then
    "$(gspc --exec-path)/gspc-rif-raw" "${opts[@]}" "${action}" "${@}"
else
    "${cmd}" "${opts[@]}" "$@"
fi
