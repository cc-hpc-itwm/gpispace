#!/bin/bash

GSPC_DOC_SHORT_DESCRIPTION="list available GPI-Space commands"

. $(gspc --exec-path)/gspc-sh-setup

command_directory=$(gspc --exec-path)

indent=0
only_important=true
only_names=false
prefix=""

while true ; do
    case "$1" in
        --indent=*)
            indent=$(( ${1:9} ))
            shift
            ;;
        --names-only)
            only_names=true
            shift
            ;;
        --all)
            only_important=false
            shift
            ;;
        --prefix=*)
            prefix="${1:9}-"
            shift
            ;;
        -h|--help)
            echo >&2 "usage: list-commands [-h|--help] [--indent=N] [--all] [--names-only] [--prefix=<prefix>]"
            exit 0
            shift
            ;;
        --) shift ; break ;;
        *) break ;;
    esac
done

find "$command_directory" -name "gspc-${prefix}*" | while read path ; do
    if [ -x "$path" ]
    then
        if $only_important ; then
            if ! grep -q '^GSPC_IMPORTANT_API_COMMAND=true$' "$path" ; then
                continue
            fi
        fi

        if ! $only_names ; then
            desc=$(grep '^GSPC_DOC_SHORT_DESCRIPTION=' "$path" | cut -d= -f2 | xargs echo)
        fi

        executable=$(basename $path)
        command=${executable:5}
        command=${command/$prefix/}

        if [ -n "$desc" ]
        then
            printf "%${indent}s%-20s %s\n" "" "${command}" "${desc}"
        else
            printf "%${indent}s%s\n" "" "${command}"
        fi
    fi
done
