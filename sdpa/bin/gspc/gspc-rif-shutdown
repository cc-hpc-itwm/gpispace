#!/bin/bash

GSPC_API_COMMAND_SHORT_DESCRIPTION="shutdown the RIF"
GSPC_API_COMMAND_LEVEL=2

. $(gspc --exec-path)/gspc-sh-setup

function usage()
{
    cat <<EOF
usage: rif-shutdown [-h|--help] [options]

Options:

   --rif-port <port>     specify the rif-port to use

   -F|--file file        use nodes from file
   -N|--node node        use this node
EOF
}

opts=()
while true ; do
    case "$1" in
        -h|--help) usage ; exit 0 ;;
        --rif-port)
            opts+=("$1" "$2")
            shift; shift
            ;;
        -F|--file)
            opts+=("$1" "$2")
            shift; shift
            ;;
        -N|--node)
            opts+=("$1" "$2")
            shift; shift
            ;;
        --) shift; break ;;
        *) break ;;
    esac
done

gspc rif eval "${opts[@]}" shutdown
