# {petry,mirko.rahn}@itwm.fraunhofer.de

source "@CMAKE_BINARY_DIR@/test/env.sh"
source "@CMAKE_BINARY_DIR@/test/dir_build.sh"
source "@CMAKE_BINARY_DIR@/test/measured.sh"

DIR_TEST="@CMAKE_CURRENT_SOURCE_DIR@"

DIR_SOURCE="${DIR_TEST}/.."
MAIN="workerlist"

OUT="${DIR_BUILD}/${MAIN}.out"
HOSTFILE="${DIR_BUILD}/hostfile"

make+=( make -f "${SDPA_HOME}/share/sdpa/make/common.mk")
make+=( MAIN="${MAIN}" )
make+=( CXXLIBRARYPATHS="${SDPA_HOME}/lib" )
make+=( PUT_PORT=trigger=[])
make+=( BUILDDIR="${DIR_BUILD}" )
make+=( LIB_DESTDIR="${DIR_BUILD}" )
make+=( -C "${DIR_SOURCE}")

cleanup()
{
  sdpa stop
  rm -f "${HOSTFILE}"
  eval ${make[@]} uninstall
  eval ${make[@]} clean
  cleanup_dir_build
}

trap 'cleanup' EXIT

measured "build-wrapper" ${make[@]} lib put                 || die $EX_ERR_RUN
measured "install" ${make[@]} install                       || die $EX_ERR_RUN

hostname > "${HOSTFILE}"                                    || die $EX_ERR_RUN

measured "setup" SDPA_PERFORM_UNATTENDED_SETUP=1 sdpa setup || die $EX_ERR_ENV

measured "boot" sdpa boot -A "${DIR_BUILD}" -M -f "${HOSTFILE}" worker:1      \
                                                            || die $EX_ERR_BOOT

measured "submit" ${make[@]} submit                         || die $EX_ERR_RUN

expected="List (\"worker-$(hostname)-1\")"

test "$(pnetget -i "${OUT}" -p workers)" == "${expected}"   || die $EX_ERR_RES

sdpa stop                                                   || die $EX_ERR_STOP
