# mirko.rahn@itwm.fraunhofer.de

source "@CMAKE_BINARY_DIR@/test/env.sh"
source "@CMAKE_BINARY_DIR@/test/dir_build.sh"
source "@CMAKE_BINARY_DIR@/test/measured.sh"

DIR_TEST="@CMAKE_CURRENT_SOURCE_DIR@"

DIR_SOURCE="${DIR_TEST}/.."

OUT="${DIR_BUILD}/@SPLIT_JOIN_MAIN@.out"
HOSTFILE="${DIR_BUILD}/hostfile"

make+=( make -f "${SDPA_HOME}/share/sdpa/make/common.mk" )
make+=( MAIN=@SPLIT_JOIN_MAIN@ )
make+=( PUT_PORT=@PUT_PORT@ )
make+=( WE_EXEC_OUTPUT="${RESULT}" )
make+=( BUILDDIR="${DIR_BUILD}" )
make+=( -C "${DIR_SOURCE}" )

cleanup()
{
  sdpa stop
  rm -f "${HOSTFILE}"
  eval ${make[@]} uninstall
  eval ${make[@]} clean
  cleanup_dir_build
}

trap 'cleanup' EXIT

hostname > "${HOSTFILE}"                                    || die $EX_ERR_ENV

measured "setup" SDPA_PERFORM_UNATTENDED_SETUP=1 sdpa setup || die $EX_ERR_ENV

measured "boot" sdpa boot -A "${DIR_BUILD}" -M -f "${HOSTFILE}" work:4        \
                                                            || die $EX_ERR_BOOT

measured "submit" ${make[@]} submit                         || die $EX_ERR_RUN

test "$(pnetget -i "${OUT}" -p O)" == "$(echo -e "@EXPECTED_OUTPUT@")"       \
                                                            || die $EX_ERR_RES

sdpa stop                                                   || die $EX_ERR_STOP
