# mirko.rahn@itwm.fraunhofer.de

source "@CMAKE_BINARY_DIR@/test/env.sh"
source "@CMAKE_BINARY_DIR@/test/dir_build.sh"
source "@CMAKE_BINARY_DIR@/test/measured.sh"

DIR_TEST="@CMAKE_CURRENT_SOURCE_DIR@"

DIR_SOURCE="${DIR_TEST}/.."
RESULT="$(mktemp -p "${DIR_BUILD}")"
WATCHED_FILE="$(mktemp -p "${DIR_BUILD}")"
STOP_FILE="$(mktemp -p "${DIR_BUILD}")"

OUT="${DIR_BUILD}/inotify.out"

make=( make )
make+=( -f "${SDPA_HOME}/share/sdpa/make/common.mk" )
make+=( MAIN=inotify )
make+=( BUILDDIR="${DIR_BUILD}" )
make+=( WE_EXEC_OUTPUT="${RESULT}" )
make+=( 'PUT_PORT=watched_file=\\\"${WATCHED_FILE}\\\"\ N=5L' )
make+=( -C "${DIR_SOURCE}" )

cleanup()
{
  rm -f "${STOP_FILE}"
  rm -f "${WATCHED_FILE}"
  rm -f "${RESULT}"
  eval ${make[@]} clean
  cleanup_dir_build
}

trap 'cleanup' EXIT

touch_file()
{
    while [ ! -e "${STOP_FILE}" ]
    do
        sleep 0.2
        touch "${WATCHED_FILE}"
    done
}

measured "build-wrapper" ${make[@]} lib                     || die $EX_ERR_RUN

rm -rf "${STOP_FILE}"                                       || die $EX_ERR_ENV
touch "${WATCHED_FILE}"                                     || die $EX_ERR_ENV

touch_file &

measured "run" ${make[@]} run                               || die $EX_ERR_RUN

touch "${STOP_FILE}"                                        || die $EX_ERR_ENV

wait                                                        || die $EX_ERR_ENV

rm -f "${STOP_FILE}"                                        || die $EX_ERR_ENV
rm -f "${WATCHED_FILE}"                                     || die $EX_ERR_ENV

test "$(pnetget -i "${RESULT}" -p done)" = "[]"             || die $EX_ERR_RES

rm -f "${RESULT}"                                        || die $EX_ERR_CLEANUP
measured "clean" ${make[@]} clean                        || die $EX_ERR_CLEANUP
cleanup_dir_build                                        || die $EX_ERR_CLEANUP

trap - EXIT
