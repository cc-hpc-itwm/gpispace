# mirko.rahn@itwm.fraunhofer.de

source "@CMAKE_BINARY_DIR@/test/env.sh"
source "@CMAKE_BINARY_DIR@/test/dir_build.sh"
source "@CMAKE_BINARY_DIR@/test/dir_state.sh"
source "@CMAKE_BINARY_DIR@/test/measured.sh"

DIR_TEST="@CMAKE_CURRENT_SOURCE_DIR@"

DIR_SOURCE="${DIR_TEST}/.."

OUT="${DIR_BUILD}/concurrent.out"
HOSTFILE="${DIR_BUILD}/hostfile"

make=( make -f "${SDPA_HOME}/share/sdpa/make/common.mk" )
make+=( MAIN=concurrent )
make+=( BUILDDIR="${DIR_BUILD}" )
make+=( LIB_DESTDIR="${DIR_BUILD}" )
make+=( PUT_PORT="N=1000L" )
make+=( -C "${DIR_SOURCE}" )

cleanup()
{
  sdpa -s "${DIR_STATE}" stop
  rm -f "${HOSTFILE}"
  eval ${make[@]} clean
  cleanup_dir_build
  cleanup_dir_state
}

trap 'cleanup' EXIT

hostname > "${HOSTFILE}"                                    || die $EX_ERR_ENV

measured "boot" sdpa boot -S "${DIR_STATE}" -A "${DIR_BUILD}" \
                          -M -f "${HOSTFILE}"               || die $EX_ERR_BOOT

measured "submit" ${make[@]} submit                         || die $EX_ERR_RUN

test "$(pnetget -i "${OUT}" -p call_count_A | tr -d 'L')" -lt 300 || die $EX_ERR_RES
test "$(pnetget -i "${OUT}" -p call_count_B | tr -d 'L')" -lt 300 || die $EX_ERR_RES
test "$(pnetget -i "${OUT}" -p call_count_C | tr -d 'L')" -lt 300 || die $EX_ERR_RES
test "$(pnetget -i "${OUT}" -p call_count_D | tr -d 'L')" -lt 300 || die $EX_ERR_RES
test "$(pnetget -i "${OUT}" -p call_count_A | tr -d 'L')" -gt 200 || die $EX_ERR_RES
test "$(pnetget -i "${OUT}" -p call_count_B | tr -d 'L')" -gt 200 || die $EX_ERR_RES
test "$(pnetget -i "${OUT}" -p call_count_C | tr -d 'L')" -gt 200 || die $EX_ERR_RES
test "$(pnetget -i "${OUT}" -p call_count_D | tr -d 'L')" -gt 200 || die $EX_ERR_RES
test "$(pnetget -i "${OUT}" -p sum_call_count)" = "1000L"   || die $EX_ERR_RES
test "$(pnetget -i "${OUT}" -p sum_ids)" = "499500L"        || die $EX_ERR_RES

measured "stop" sdpa -s "${DIR_STATE}" stop                 || die $EX_ERR_STOP

rm -f "${HOSTFILE}"                                         || die $EX_ERR_CLEANUP
measured "clean" ${make[@]} clean                           || die $EX_ERR_CLEANUP
cleanup_dir_build                                           || die $EX_ERR_CLEANUP
cleanup_dir_state                                           || die $EX_ERR_CLEANUP

trap - EXIT
