# mirko.rahn@itwm.fraunhofer.de

source "@CMAKE_BINARY_DIR@/test/env.sh"
source "@CMAKE_BINARY_DIR@/test/dir_build.sh"
source "@CMAKE_BINARY_DIR@/test/measured.sh"

DIR_TEST="@CMAKE_CURRENT_SOURCE_DIR@"

DIR_SOURCE="${DIR_TEST}/.."
RESULT="$(mktemp -p "${DIR_BUILD}")"

OUT="${DIR_BUILD}/concurrent.out"
CMP="${DIR_BUILD}/run.out"
CMP_ORIG="${DIR_TEST}/out.cmp"

make=( make -f "${SDPA_HOME}/share/sdpa/make/common.mk" )
make+=( MAIN=concurrent )
make+=( BUILDDIR="${DIR_BUILD}" )
make+=( WE_EXEC_OUTPUT="${RESULT}" )
make+=( PUT_PORT="N=1000L" )
make+=( -C "${DIR_SOURCE}" )

cleanup()
{
  rm -f "${CMP}"
  rm -f "${RESULT}"
  eval ${make[@]} clean
  cleanup_dir_build
}

trap 'cleanup' EXIT

measured "run" WE_EXEC_WORKER=12 ${make[@]} run             || die $EX_ERR_RUN

test "$(pnetget -i "${RESULT}" -p call_count_A | tr -d 'L')" -lt 300 || die $EX_ERR_RES
test "$(pnetget -i "${RESULT}" -p call_count_B | tr -d 'L')" -lt 300 || die $EX_ERR_RES
test "$(pnetget -i "${RESULT}" -p call_count_C | tr -d 'L')" -lt 300 || die $EX_ERR_RES
test "$(pnetget -i "${RESULT}" -p call_count_D | tr -d 'L')" -lt 300 || die $EX_ERR_RES
test "$(pnetget -i "${RESULT}" -p call_count_A | tr -d 'L')" -gt 200 || die $EX_ERR_RES
test "$(pnetget -i "${RESULT}" -p call_count_B | tr -d 'L')" -gt 200 || die $EX_ERR_RES
test "$(pnetget -i "${RESULT}" -p call_count_C | tr -d 'L')" -gt 200 || die $EX_ERR_RES
test "$(pnetget -i "${RESULT}" -p call_count_D | tr -d 'L')" -gt 200 || die $EX_ERR_RES
test "$(pnetget -i "${RESULT}" -p sum_call_count)" = "1000L"|| die $EX_ERR_RES
test "$(pnetget -i "${RESULT}" -p sum_ids)" = "499500L"     || die $EX_ERR_RES

rm -f "${CMP}"                                           || die $EX_ERR_CLEANUP
rm -f "${RESULT}"                                        || die $EX_ERR_CLEANUP
measured "clean" ${make[@]} clean                        || die $EX_ERR_CLEANUP
cleanup_dir_build                                        || die $EX_ERR_CLEANUP

trap - EXIT
