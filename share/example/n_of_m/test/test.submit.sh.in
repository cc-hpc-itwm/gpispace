# mirko.rahn@itwm.fraunhofer.de

source "@CMAKE_BINARY_DIR@/test/env.sh"
source "@CMAKE_BINARY_DIR@/test/dir_build.sh"
source "@CMAKE_BINARY_DIR@/test/measured.sh"

DIR_TEST="@CMAKE_CURRENT_SOURCE_DIR@"

DIR_SOURCE="${DIR_TEST}/.."

OUT="${DIR_BUILD}/n_of_m.out"
CMP="${DIR_BUILD}/run.out"
CMP_ORIG="${DIR_TEST}/out.cmp"
HOSTFILE="${DIR_BUILD}/hostfile"

make_src='make BUILDDIR="${DIR_BUILD}" LIB_DESTDIR="${DIR_BUILD}" -C "${DIR_SOURCE}"'

cleanup()
{
  sdpa stop
  rm -rf "${CMP}" "${HOSTFILE}"
  eval ${make_src} uninstall
  eval ${make_src} clean
  cleanup_dir_build
}

trap 'cleanup' EXIT

measured "build-wrapper" ${make_src} lib                    || die $EX_ERR_RUN
measured "install" ${make_src} install                      || die $EX_ERR_RUN

hostname > "${HOSTFILE}"

measured "setup" SDPA_PERFORM_UNATTENDED_SETUP=1 sdpa setup || die $EX_ERR_ENV

measured "boot" sdpa boot -A "${DIR_BUILD}" -M -f "${HOSTFILE}" work:4        \
                                                            || die $EX_ERR_BOOT

measured "submit" ${make_src} submit                        || die $EX_ERR_RUN

test $(pnetget -i "${OUT}" -p done) == "[]"                 || die $EX_ERR_RES

sdpa stop                                                   || die $EX_ERR_STOP
