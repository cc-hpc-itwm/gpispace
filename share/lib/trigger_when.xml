<template name="trigger_when">
  <template-parameter type="T"/>
  <defun>
    <properties name="pnetc">
      <properties name="warning">
        <property key="inline-many-output-ports" value="off"/>
      </properties>
    </properties>
    <in name="object" type="T"/>
    <out name="object" type="T"/>
    <out name="trigger" type="control"/>
    <expression>
      ${trigger} := []
    </expression>
  </defun>
</template>
